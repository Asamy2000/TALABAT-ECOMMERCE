@using E_commerce.Core;
@using E_commerce.Core.Entities;
@model ProductVM
@inject IUnitOfWork _unitOfwork
@{
    var Brands = new SelectList(_unitOfwork.Repository<ProductBrand>().GetAllAsync().Result, "Id", "Name");
    var Types = new SelectList(_unitOfwork.Repository<ProductType>().GetAllAsync().Result, "Id", "Name");
}
<div class="container">
<h1>Delete </h1>
<hr />
<form asp-action="Delete" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div class="form-group mb-4">
        <label asp-for="Name"></label>
        <input disabled asp-for="Name" class="form-control " placeholder="Product Name" />
       
    </div>

    <div class="form-group mb-4">
        <label asp-for="Description"></label>
        <textarea disabled asp-for="Description" class="form-control " placeholder="Product Description"></textarea>
       
    </div>

    <div class="form-group mb-4">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control " placeholder="Product Price " type="number" />
       
    </div>

    <div class="form-group mb-4">
        <label asp-for="Brand"></label>
        <select disabled class="form-control" asp-for="ProductBrandId" asp-items="@Brands">
            <option value="@null">--Select Brand--</option>
        </select>
      
    </div>

    <div class="form-group mb-2">
        <label asp-for="ProductType"></label>
        <select disabled class="form-control" asp-for="ProductTypeId" asp-items="@Types">
            <option value="@null">--Select Type--</option>
        </select>
      
    </div>

    <div class="input-group mt-2 ">
        <button type="submit" class="btn btn-danger m-2">Delete</button>
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary m-2">Back</a>
    </div>
</form>
</div>