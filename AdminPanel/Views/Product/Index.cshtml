@model IReadOnlyList<ProductVM>
@{
    ViewData["Title"] = "Index";
}
<h1>All Products</h1>
<hr />

@if (Model.Count() > 0)
{
    
    <div class="container">
        <a asp-controller="Product" asp-action="Create" class="btn btn-success mt-1 mb-2"><i class="fa-solid fa-circle-plus"></i> New Product</a>

        <table class="table table table-hover table-striped table-bordered dt-responsive noWrap">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Brand</th>
                    <th>type</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>
                            <img class="w-25" src="~/@product.PicUrl" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td>@product.Brand.Name</td>
                        <td>@product.ProductType.Name</td>
                       
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@product.Id"><i class="fas fa-edit"></i> Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="fas fa-trash"></i> Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Rocords</h2>
    </div>
}
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

