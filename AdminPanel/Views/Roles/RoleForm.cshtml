@model RoleFormViewModel

<form method="post" asp-action="Create" class="mt-4">
    <div class="form-group">
        <input asp-for="Name" class="form-control " placeholder="Enter role name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success  mt-2"><i class="fa-solid fa-circle-plus"></i> New Role</button>
    </div>
</form>

